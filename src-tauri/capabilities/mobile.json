{
  "identifier": "mobile-capability",
  "description": "mobile-capability",
  "local": true,
  "windows": [
    "main"
  ],
  "platforms": [
    "iOS",
    "android"
  ],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**"
      ]
    },
    "core:window:allow-start-dragging",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "dialog:default",
    "shell:default",
    "core:app:allow-set-app-theme",
    "core:window:allow-set-theme",
    "core:window:allow-theme",
    "log:default",
    "barcode-scanner:allow-scan",
    "barcode-scanner:allow-cancel",
    "barcode-scanner:allow-request-permissions",
    "barcode-scanner:allow-check-permissions",
    "barcode-scanner:allow-vibrate"
  ]
}
