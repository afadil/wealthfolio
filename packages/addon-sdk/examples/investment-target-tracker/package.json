{
  "name": "wealthfolio-investment-target-tracker-addon",
  "version": "1.0.0",
  "description": "An addon for tracking investment progress towards target amounts with calendar visualization",
  "type": "module",
  "main": "dist/addon.js",
  "author": "Wealthfolio Team",
  "license": "MIT",
  "homepage": "https://github.com/afadil/wealthfolio",
  "keywords": [
    "wealthfolio",
    "addon",
    "investment",
    "target",
    "tracker",
    "calendar",
    "visualization"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "dev:server": "node ../../dev-server.js .",
    "clean": "rm -rf dist investment-target-tracker-addon.zip",
    "package": "zip -r $npm_package_name-$npm_package_version.zip manifest.json dist/ assets/ README.md",
    "bundle": "pnpm clean && pnpm build && pnpm package",
    "lint": "tsc --noEmit",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@wealthfolio/addon-sdk": "workspace:*",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "rollup-plugin-external-globals": "^0.13.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "files": [
    "dist/",
    "manifest.json",
    "README.md"
  ]
}
