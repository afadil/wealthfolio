{
  "name": "@wealthvn/addon-sdk",
  "version": "2.0.0",
  "type": "module",
  "description": "TypeScript SDK for building WealthVN addons with enhanced functionality and type safety",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/src/types.d.ts"
    },
    "./permissions": {
      "import": "./dist/permissions.js",
      "types": "./dist/src/permissions.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "wealthvn",
    "addon",
    "plugin",
    "sdk",
    "typescript",
    "financial",
    "portfolio"
  ],
  "author": "Chipheo00 - CFPM Inc. WealthVN Team",
  "license": "MIT",
  "homepage": "https://github.com/chipheo00/vn-wealthfolio/tree/main/packages/addon-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/chipheo00/vn-wealthfolio.git",
    "directory": "packages/addon-sdk"
  },
  "bugs": {
    "url": "https://github.com/chipheo00/vn-wealthfolio/issues"
  },
  "scripts": {
    "build": "tsup && pnpm run build:types",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:quiet": "eslint . --quiet",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build:types": "tsc -p tsconfig.json",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
