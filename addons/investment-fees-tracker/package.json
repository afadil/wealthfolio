    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@wealthfolio/addon-dev-tools": "workspace:*",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "recharts": "^3.7.0",
    "rollup-plugin-external-globals": "^0.13.0",
    "tailwind-merge": "^3.4.0",
