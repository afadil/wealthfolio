{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Library-specific settings
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noEmit": false,

    // UI-specific settings
    "noImplicitOverride": false, // Allow class components without override

    // Path mapping for UI package
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
